	</panel>
	<accordion name="wearable_accordion">
		<panel name="hair_color_tab_holder" title="Цвет">
			<accordion name="hair_color_accordion">
				<accordion_tab name="hair_color_tab" title="Цвет"/>
			</accordion>
		</panel>
		<panel name="hair_style_tab_holder" title="Стиль">
			<accordion name="hair_style_accordion">
				<accordion_tab name="hair_style_tab" title="Стиль"/>
			</accordion>
		</panel>
		<panel name="hair_eyebrows_tab_holder" title="Брови">
			<accordion name="hair_eyebrows_accordion">
				<accordion_tab name="hair_eyebrows_tab" title="Брови"/>
			</accordion>
