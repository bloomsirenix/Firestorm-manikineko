<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="my_environments" title="I Miei Ambienti">
	<layout_stack name="main_layout">
		<layout_panel label="Filtri" name="filter_panel">
			<check_box label="Giornate" name="chk_days"/>
			<check_box label="Cieli" name="chk_skies"/>
			<check_box label="Acqua" name="chk_water"/>
			<filter_editor label="Filtra ambienti" name="flt_search"/>
		</layout_panel>
		<layout_panel label="Ambienti" name="list_panel"/>
		<layout_panel name="lp_showfolders">
			<check_box label="Mostra tutte le cartelle" name="chk_showfolders"/>
		</layout_panel>
		<layout_panel name="pnl_control">
			<panel name="pnl_bottom">
				<menu_button name="btn_gear" tool_tip="Altre opzioni"/>
				<menu_button name="btn_newsettings" tool_tip="Crea nuove impostazioni"/>
				<button name="btn_del" tool_tip="Rimuovi l'elemento selezionato"/>
			</panel>
		</layout_panel>
	</layout_stack>
</floater>
