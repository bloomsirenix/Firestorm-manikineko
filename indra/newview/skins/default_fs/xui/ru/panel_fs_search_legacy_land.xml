<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="Продажа земли" name="panel_ls_land">
	<panel name="panel_ls_input">
		<text name="search_text">
			Введите запрос:
		</text>
		<combo_box name="land_category">
			<combo_box.item label="Все категории" name="All" />
			<combo_box.item label="Аукцион" name="Auction" />
			<combo_box.item label="Земля на материке" name="Mainland" />
			<combo_box.item label="Земля на острове" name="Estate" />
		</combo_box>
		<check_box label="Цена &lt;" name="price_check" />
		<line_editor left_pad="23" name="edit_price" />
		<check_box label="Площадь &gt;" name="area_check" />
		<line_editor left_pad="32" name="edit_area" />
		<text name="sort_text">
			Сортировать по:
		</text>
		<check_box label="Возрастанию" name="ascending_check" />
		<combo_box name="land_sort_combo">
			<combo_box.item label="Названию" name="Name_item" />
			<combo_box.item label="Цене" name="Price_item" />
			<combo_box.item label="Цене за метр" name="PPM_item" />
			<combo_box.item label="Площади" name="Area_item" />
		</combo_box>
		<button label="Поиск" name="land_find" />
	</panel>
	<panel name="panel_ls_scrolllist">
		<scroll_list name="search_results_land">
			<columns label="Название" name="land_name" />
			<columns label="Цена" name="price" />
			<columns label="Площадь" name="area" />
			<columns label="Тип" name="land_type" />
		</scroll_list>
		<button label="Назад" name="land_back" />
		<button label="Далее" name="land_next" />
	</panel>
</panel>
