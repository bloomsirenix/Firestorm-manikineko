<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="panel_gltf_material">
	<check_box label="Doppelseitig" name="double sided"/>
	<panel name="base_color_texture_pnl">
		<text name="base_color_lbl">
			Basis-Farbe:
		</text>
		<texture_picker name="base_color_texture" tool_tip="Basis-Farbe-Map. Alpha-Kanal ist optional und wird für Transparenz verwendet."/>
		<text name="base_color_upload_fee">
			Keine Upload-Geb.
		</text>
		<text name="base_color_tint_lbl">
			Farbton
		</text>
		<text name="base_color_transparency_lbl">
			Alpha
		</text>
		<text name="alpha_mode_lbl">
			Alpha-Modus
		</text>
		<combo_box name="alpha mode">
			<combo_box.item label="Undurchsichtig" name="None"/>
			<combo_box.item label="Vermischung" name="Alpha blending"/>
			<combo_box.item label="Maskierung" name="Alpha masking"/>
		</combo_box>
		<text name="alpha_cutoff_lbl">
			Alpha-Cutoff
		</text>
	</panel>
	<panel name="metallic_texture_pnl">
		<text name="metallic_roughness_lbl">
			Metall. Unebenheit:
		</text>
		<texture_picker name="metallic_roughness_texture" tool_tip="GLTF-metallische-Unebenheit-Map mit optionaler Verdeckung. Roter Kanal ist Verdeckung, grüner Kanal is Unebenheit, blauer Kanal ist Metalligkeit."/>
		<text name="metallic_upload_fee">
			Keine Upload-Geb.
		</text>
		<text name="metallic_factor_lbl">
			Metallisch-Faktor
		</text>
		<text name="roughness_factor_lbl">
			Unebenh.-Faktor
		</text>
	</panel>
	<panel name="emissive_texture_pnl">
		<text name="emissive_lbl">
			Ausstrahlend:
		</text>
		<text name="emissive_upload_fee">
			Keine Upload-Geb.
		</text>
		<text name="emissive_tint_lbl">
			Farbton
		</text>
	</panel>
	<panel name="normal_texture_pnl">
		<text name="normal_lbl">
			Normal:
		</text>
		<text name="normal_upload_fee">
			Keine Upload-Geb.
		</text>
	</panel>
</panel>
