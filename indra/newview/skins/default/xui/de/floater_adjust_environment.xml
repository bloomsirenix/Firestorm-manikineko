				<layout_panel name="lp_4">
					<text name="label">
						Mond:
					</text>
					<text name="moon_azimuth_label">
						Azimut:
					</text>
					<text name="moon_elevation_label">
						Höhenwinkel:
					</text>
					<check_box label="Beacon anzeigen" name="moonbeacon"/>
