<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="track picker" title="Seleziona Traccia">
	<layout_stack name="adjuster">
		<layout_panel name="pnl_desc" height="12">
			<text name="select_description">
				Scegli il cielo di origine:
			</text>
		</layout_panel>
		<layout_panel name="pnl_traks">
			<radio_group name="track_selection">
				<radio_item label="Cielo4 - [ALT]" name="radio_sky4"/>
				<radio_item label="Cielo3 - [ALT]" name="radio_sky3"/>
				<radio_item label="Cielo2 - [ALT]" name="radio_sky2"/>
				<radio_item label="Terreno" name="radio_sky1"/>
			</radio_group>
		</layout_panel>
		<layout_panel name="pnl_ok_cancel">
			<button label="Ok" label_selected="Ok" name="btn_select"/>
			<button label="Annulla" label_selected="Annulla" name="btn_cancel"/>
		</layout_panel>
	</layout_stack>
</floater>
