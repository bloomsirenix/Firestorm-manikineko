<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="Land Sales" name="panel_ls_land">
	<panel name="panel_ls_input">
		<text name="search_text">
			Inserisci i termini di ricerca:
		</text>
		<combo_box name="land_category">
			<combo_box.item label="Tutte" name="All"/>
			<combo_box.item label="Aste" name="Auction"/>
			<combo_box.item label="Vendite Mainland" name="Mainland"/>
			<combo_box.item label="Vendite Immobiliari" name="Estate"/>
		</combo_box>
		<check_box label="Prezzo &lt;" name="price_check"/>
		<line_editor left_pad="30" name="edit_price" />
		<text name="sort_text">
			Ordina per:
		</text>
		<check_box label="Ascendente" name="ascending_check"/>
		<combo_box name="land_sort_combo">
			<combo_box.item label="Nome" name="Name_item"/>
			<combo_box.item label="Prezzo" name="Price_item"/>
			<combo_box.item label="Prezzo al metro" name="PPM_item"/>
		</combo_box>
		<button label="Cerca" name="land_find"/>
	</panel>
	<panel name="panel_ls_scrolllist">
		<scroll_list name="search_results_land">
			<columns label="Nome" name="land_name"/>
			<columns label="Prezzo" name="price"/>
			<columns label="L$ / m" name="ppm"/>
			<columns label="Tipo" name="land_type"/>
		</scroll_list>
		<button label="Precedente" name="land_back"/>
		<button label="Successiva" name="land_next"/>
	</panel>
</panel>
