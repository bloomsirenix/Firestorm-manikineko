<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="Torpaq satışı" name="panel_ls_land">
	<panel name="panel_ls_input">
		<text name="search_text">
			Sorğunu daxil edin:
		</text>
		<combo_box name="land_category">
			<combo_box.item label="Bütün kateqoriyalar" name="All" />
			<combo_box.item label="Hərrac" name="Auction" />
			<combo_box.item label="Qitədə torpaq" name="Mainland" />
			<combo_box.item label="Adada torpaq" name="Estate" />
		</combo_box>
		<check_box label="Qiymət &lt;" name="price_check" />
		<line_editor left_pad="23" name="edit_price" />
		<check_box label="Kvadrat &gt;" name="area_check" />
		<line_editor left_pad="32" name="edit_area" />
		<text name="sort_text">
			Sırala:
		</text>
		<check_box label="Ardığına görə" name="ascending_check" />
		<combo_box name="land_sort_combo">
			<combo_box.item label="Adına görə" name="Name_item" />
			<combo_box.item label="Qiymətinə görə" name="Price_item" />
			<combo_box.item label="Kvadrat/qiymətinə görə" name="PPM_item" />
			<combo_box.item label="Kvadratına görə" name="Area_item" />
		</combo_box>
		<button label="Axtarış" name="land_find" />
	</panel>
	<panel name="panel_ls_scrolllist">
		<scroll_list name="search_results_land">
			<columns label="Ad" name="land_name" />
			<columns label="Qiymət" name="price" />
			<columns label="Kvadrat" name="area" />
			<columns label="Növ" name="land_type" />
		</scroll_list>
		<button label="Geri" name="land_back" />
		<button label="İrəli" name="land_next" />
	</panel>
</panel>
