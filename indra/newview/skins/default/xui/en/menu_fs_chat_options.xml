<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<toggleable_menu name="Chat Options Menu" opaque="true" visible="false">
	<menu_item_check
		label="Show Radar..."
		name="nearby_people">
		<menu_item_check.on_click
			function="Floater.Toggle"
			parameter="fs_radar"/>
		<menu_item_check.on_check
			function="Floater.Visible"
			parameter="fs_radar"/>
	</menu_item_check>
	<menu_item_check
		label="Show Nearby Voice..."
		name="nearby_voice">
		<menu_item_check.on_click
			function="Floater.Toggle"
			parameter="fs_voice_controls"/>
		<menu_item_check.on_check
			function="Floater.Visible"
			parameter="fs_voice_controls"/>
	</menu_item_check>
	<menu_item_check
		label="Show Block List..."
		name="block_list">
		<menu_item_check.on_click
			function="ChatOptions.Action"
			parameter="blocklist"/>
		<menu_item_check.on_check
			function="ChatOptions.Check"
			parameter="blocklist"/>
	</menu_item_check>
	<menu_item_separator/>
	<menu_item_check
		label="Use V1 style chat headers"
		name="plain_text_chat_history">
		<menu_item_check.on_check
			function="CheckControl"
			parameter="PlainTextChatHistory"/>
		<menu_item_check.on_click
			function="ToggleControl"
			parameter="PlainTextChatHistory"/>
	</menu_item_check>
	<menu_item_check
		label="Show profile icons in chat headers"
		name="chat_header_icons">
		<menu_item_check.on_check
			function="CheckControl"
			parameter="ShowChatMiniIcons"/>
		<menu_item_check.on_click
			function="ToggleControl"
			parameter="ShowChatMiniIcons"/>
		<menu_item_check.on_visible
			function="ChatOptions.Visible"
			parameter="show_mini_icons"/>
	</menu_item_check>
	<context_menu
		label="Font size..."
		name="font_size">
		<menu_item_check
			label="Small"
			name="font_size_small">
			<menu_item_check.on_check
				function="ChatOptions.Check"
				parameter="font_size_small"/>
			<menu_item_check.on_click
				function="ChatOptions.Action"
				parameter="font_size_small"/>
		</menu_item_check>
		<menu_item_check
			label="Medium"
			name="font_size_medium">
			<menu_item_check.on_check
				function="ChatOptions.Check"
				parameter="font_size_medium"/>
			<menu_item_check.on_click
				function="ChatOptions.Action"
				parameter="font_size_medium"/>
		</menu_item_check>
		<menu_item_check
			label="Large"
			name="font_size_large">
			<menu_item_check.on_check
				function="ChatOptions.Check"
				parameter="font_size_large"/>
			<menu_item_check.on_click
				function="ChatOptions.Action"
				parameter="font_size_large"/>
		</menu_item_check>
		<menu_item_check
			label="Huge"
			name="font_size_huge">
			<menu_item_check.on_check
				function="ChatOptions.Check"
				parameter="font_size_huge"/>
			<menu_item_check.on_click
				function="ChatOptions.Action"
				parameter="font_size_huge"/>
		</menu_item_check>
	</context_menu>
	<menu_item_separator/>
	<menu_item_check
		label="Additional chevron (&gt;) as typing indicator"
		name="typing_chevron">
		<menu_item_check.on_check
			function="CheckControl"
			parameter="FSTypingChevronPrefix"/>
		<menu_item_check.on_click
			function="ToggleControl"
			parameter="FSTypingChevronPrefix"/>
		<menu_item_check.on_visible
			function="ChatOptions.Visible"
			parameter="typing_chevron"/>
		<menu_item_check.on_enable
			function="ChatOptions.Enable"
			parameter="typing_chevron"/>
	</menu_item_check>
	<menu_item_check
		label="Show new message notification"
		name="new_message_notification">
		<menu_item_check.on_check
			function="ChatOptions.Check"
			parameter="new_message_notification"/>
		<menu_item_check.on_click
			function="ChatOptions.Action"
			parameter="new_message_notification"/>
	</menu_item_check>
	<menu_item_check
		label="Show chat bar"
		name="show_chat_bar">
		<menu_item_check.on_check
			function="CheckControl"
			parameter="FSNearbyChatbar"/>
		<menu_item_check.on_click
			function="ToggleControl"
			parameter="FSNearbyChatbar"/>
		<menu_item_check.on_visible
			function="ChatOptions.Visible"
			parameter="show_chat_bar"/>
	</menu_item_check>
	<menu_item_check
		label="Show channel selection"
		name="show_channel_selection">
		<menu_item_check.on_check
			function="CheckControl"
			parameter="FSShowChatChannel"/>
		<menu_item_check.on_click
			function="ToggleControl"
			parameter="FSShowChatChannel"/>
		<menu_item_check.on_visible
			function="ChatOptions.Visible"
			parameter="show_channel_selection"/>
		<menu_item_check.on_enable
			function="ChatOptions.Enable"
			parameter="show_channel_selection"/>
	</menu_item_check>
	<menu_item_check
		label="Show chat type / send button"
		name="show_send_button">
		<menu_item_check.on_check
			function="CheckControl"
			parameter="FSShowChatType"/>
		<menu_item_check.on_click
			function="ToggleControl"
			parameter="FSShowChatType"/>
		<menu_item_check.on_visible
			function="ChatOptions.Visible"
			parameter="show_send_button"/>
		<menu_item_check.on_enable
			function="ChatOptions.Enable"
			parameter="show_send_button"/>
	</menu_item_check>
	<menu_item_check
		label="Show send button in IM sessions"
		name="show_im_send_button">
		<menu_item_check.on_check
			function="CheckControl"
			parameter="FSShowIMSendButton"/>
		<menu_item_check.on_click
			function="ToggleControl"
			parameter="FSShowIMSendButton"/>
		<menu_item_check.on_visible
			function="ChatOptions.Visible"
			parameter="show_im_send_button"/>
	</menu_item_check>
</toggleable_menu>
