<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="sell land" title="Vendre le terrain">
	<scroll_container name="profile_scroll">
		<panel name="scroll_content_panel">
			<text name="info_parcel_label">Terrain :</text>
			<text name="info_parcel">PARCEL NAME</text>
			<text name="info_size_label">Surface :</text>
			<text name="info_size">[AREA] m²</text>
			<text name="info_action">Pour vendre ce terrain :</text>
			<text name="price_label">1. Définissez un prix :</text>
			<text name="price_text">Choisissez un prix approprié.</text>
			<text name="price_ld">L$</text>
			<line_editor name="price">0</line_editor>
			<text name="price_per_m">([PER_METER] L$ par m²)</text>
			<text name="sell_to_label">2. Vendez le terrain à :</text>
			<text name="sell_to_text">Choisissez de vendre à tout le monde ou à un acheteur précis.</text>
			<combo_box name="sell_to">
				<combo_box.item label="- Sélectionnez -" name="--selectone--"/>
				<combo_box.item label="Tout le monde" name="Anyone"/>
				<combo_box.item label="Personne spécifique :" name="Specificuser:"/>
			</combo_box>
			<button label="Sélectionnez" name="sell_to_select_agent"/>
			<text name="sell_objects_label">3. Vendre les objets avec le terrain ?</text>
			<text name="sell_objects_text">Les objets transférables du terrain changeront de propriétaire.</text>
			<radio_group name="sell_objects">
				<radio_item label="Non, garder la propriété des objets" name="no"/>
				<radio_item label="Oui, vendre les objets avec le terrain" name="yes"/>
			</radio_group>
			<button label="Afficher les objets" name="show_objects"/>
			<text name="nag_message_label" left="8">ATTENTION : Toute vente est définitive.</text>
			<button label="Mettre ce terrain en vente" name="sell_btn"/>
			<button label="Annuler" name="cancel_btn"/>
		</panel>
	</scroll_container>
</floater>
